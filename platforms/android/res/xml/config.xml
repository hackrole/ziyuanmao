<?xml version='1.0' encoding='utf-8'?>
<widget id="com.libern.ziyuanmao" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/android/mdpi/icon.png" />
    <icon density="hdpi" src="res/android/hdpi/icon.png" />
    <icon density="xhdpi" src="res/android/xhdpi/icon.png" />
    <name>资源猫</name>
    <description>
        资源搜索神器
    </description>
    <author email="libernlin@gmail.com" href="http://cordova.io">
        Libern
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon.png" />
</widget>
